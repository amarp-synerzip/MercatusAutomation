{
    "compilerOnSave": true,
    "compilerOption": {
        "outDir": "convertesjs",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]
    },
    "exclude": [
        "allure-results",
        "logfiles",
        "node_modules",
        "resources"
    ],
    "include": [
        "configrunner",
        "specfiles/**/*"
    ],
    "rootDirs": [
        "."
    ]
}